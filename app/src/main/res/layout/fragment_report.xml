<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnReportDateFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:text="Select From"/>
        <Button
            android:id="@+id/btnReportDateTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:text="Select To"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sReportType"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="none"/>
        
        <Button
            android:id="@+id/btnReportGenerate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_weight="1"
            android:text="Generate"/>
        
    </LinearLayout>
    
    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/lineChartReport"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnReportExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="EXPORT REPORT"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>