<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTotalAmountDue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="..."
        android:textSize="40dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="P 300.00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount Due:"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalAmountDue"
        app:layout_constraintStart_toStartOf="@+id/tvTotalAmountDue"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalAmountDue" />

    <com.google.android.material.divider.MaterialDivider
        android:padding="2pt"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnPayWithGCash"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY WITH GCASH"/>

    <TextView
        android:id="@+id/tvCheckoutStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalAmountDue"
        app:layout_constraintStart_toStartOf="@+id/tvTotalAmountDue"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalAmountDue" />

    <TextView
        android:id="@+id/tvCheckoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="start"
        android:textSize="18sp"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalAmountDue"
        app:layout_constraintStart_toStartOf="@+id/tvTotalAmountDue"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalAmountDue" />

</LinearLayout>